---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface Props {
	title?: string;
}

const { title = "Localleads247" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />	
		<meta name="viewport" content="width=device-width" />
		
		<!-- Favicon configuration -->
		<link rel="apple-touch-icon" sizes="180x180" href="/favicon/apple-touch-icon.png">
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon/favicon-32x32.png">
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon/favicon-16x16.png">
		<link rel="manifest" href="/favicon/site.webmanifest">
		<link rel="shortcut icon" href="/favicon/favicon.ico">
		<meta name="theme-color" content="#ffffff">
		
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		
		<!-- Preload fonts for better performance -->
		<link rel="preload" href="/fonts/Inter-Bold-subset.woff2" as="font" type="font/woff2" crossorigin />
		<link rel="preload" href="/fonts/Inter-SemiBold.woff2" as="font" type="font/woff2" crossorigin />
		<link rel="preload" href="/fonts/Inter-Medium-subset.woff2" as="font" type="font/woff2" crossorigin />
		<link rel="preload" href="/fonts/Inter-Regular-subset.woff2" as="font" type="font/woff2" crossorigin />
		<link rel="preload" href="/fonts/Montserrat-SemiBold-subset.woff2" as="font" type="font/woff2" crossorigin />
		<link rel="preload" href="/fonts/Montserrat-Medium-subset.ttf" as="font" type="font/ttf" crossorigin />
	</head>
	<body>
		<Header />
		<slot />
		<Footer />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
