---
// ResourceContent Component for LocalLeads247
// Renders Markdown content from .md files for resource pages

interface Props {
  content: any; // The compiled content object from Markdown
}

const { content } = Astro.props;
---

<div class="article-container">
  <article class="article-content">
    <div set:html={content}></div>
  </article>
  
  <div class="cta-container">
    <a href="#" class="btn btn-primary">Explore The All-in-One Business OS â†’</a>
  </div>
</div>

<style>
  .article-container {
    max-width: 860px;
    margin: 0 auto;
    padding: 3rem 1.5rem;
  }

  .article-content {
    font-size: 1.125rem;
    line-height: 1.8;
    color: #333;
  }

  .article-content :global(h2) {
    font-size: 1.8rem;
    margin-top: 2.5rem;
    margin-bottom: 1.5rem;
    font-weight: 600;
    color: #000;
  }

  .article-content :global(p) {
    margin-bottom: 1.5rem;
  }

  .article-content :global(strong) {
    font-weight: 600;
  }

  .article-content :global(ul), 
  .article-content :global(ol) {
    margin-left: 1.5rem;
    margin-bottom: 1.5rem;
  }

  .article-content :global(li) {
    margin-bottom: 0.5rem;
  }

  .article-content :global(a) {
    color: var(--color-primary);
    text-decoration: underline;
  }

  .article-content :global(blockquote) {
    border-left: 4px solid var(--color-primary);
    padding-left: 1rem;
    margin-left: 0;
    margin-right: 0;
    font-style: italic;
    color: #555;
  }

  .cta-container {
    text-align: center;
    margin-top: 3rem;
    margin-bottom: 2rem;
  }

  .btn {
    display: inline-block;
    padding: 14px 28px;
    border-radius: 50px;
    font-weight: 600;
    text-align: center;
    text-decoration: none;
    cursor: pointer;
    transition: all 0.3s ease;
    font-size: 1.125rem;
  }

  .btn-primary {
    background-color: var(--color-primary);
    color: var(--color-accent);
    border: 1px solid var(--color-primary);
  }

  .btn-primary:hover {
    background-color: transparent;
    color: var(--color-primary);
  }

  /* Responsive design adjustments */
  @media (max-width: 768px) {
    .article-container {
      padding: 2rem 1rem;
    }

    .article-content {
      font-size: 1rem;
    }

    .article-content :global(h2) {
      font-size: 1.5rem;
    }
  }
</style>
