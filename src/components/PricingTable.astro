---
interface PricingOption {
  tier: string;
  popular?: boolean;
  description: string;
  price: string;
  adSpend: boolean;
  features: Array<{
    text: string;
    highlight?: boolean;
    sub?: string;
  }>;
  buttonText: string;
  buttonLink: string;
}

interface Props {
  options: PricingOption[];
}

const { options } = Astro.props;
---

<section class="py-16 md:py-24">
  <div class="container max-w-7xl mx-auto px-4 xl:px-0">
    <div class="text-center mb-10 xl:mb-16">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">Choose the Right Plan for Your Business</h2>
      <p class="text-gray-600 max-w-3xl mx-auto">Our service packages are designed to deliver measurable results at every investment level, with clear paths to scaling as your business grows.</p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 items-center">
      {
        options.map((option) => (
          <div class={`border rounded-lg ${option.popular ? 'border-accent relative pt-8 mt-4' : 'border-gray-200'}`}>
            {option.popular && (
              <div class="absolute -top-3 left-1/2 transform -translate-x-1/2 bg-accent text-white px-6 py-1 rounded-full text-sm font-medium z-10">
                MOST POPULAR
              </div>
            )}
            <div class="p-6">
              <h3 class="text-2xl font-bold mb-2">{option.tier}</h3>
              <p class="text-gray-600 mb-6 h-16">{option.description}</p>
              
              <div class="mb-6">
                <span class="text-4xl font-bold">{option.price}</span>
                {option.adSpend && (
                  <span class="text-gray-500 text-sm">
                    /month + ad spend
                  </span>
                )}
              </div>
              
              <div class="space-y-4 mb-8">
                {option.features.map((feature) => (
                  <div class="flex items-start">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      class="h-5 w-5 text-accent mr-2 mt-0.5 flex-shrink-0"
                      viewBox="0 0 20 20"
                      fill="currentColor"
                    >
                      <path
                        fill-rule="evenodd"
                        d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                        clip-rule="evenodd"
                      />
                    </svg>
                    <div>
                      <div class={`${feature.highlight ? 'font-bold' : ''}`}>{feature.text}</div>
                      {feature.sub && <div class="text-gray-500 text-sm ml-4">{feature.sub}</div>}
                    </div>
                  </div>
                ))}
              </div>
              
              <a
                href={option.buttonLink}
                class={`block w-full py-3 px-4 text-center rounded-full transition duration-300 ${
                  option.popular
                    ? 'bg-primary text-accent hover:bg-gray-200 hover:text-primary'
                    : 'bg-gray-200 text-gray-800 hover:bg-gray-300'
                }`}
              >
                {option.buttonText}
              </a>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
