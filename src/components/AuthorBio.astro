---
import { Image } from 'astro:assets';

interface Props {
  authorData: {
    title?: string;
    description?: string;
    image?: string;
    imageAlt?: string;
  };
  id?: string;
}

const { authorData, id } = Astro.props;
const { title, description, image, imageAlt } = authorData || {};
---

<section id={id} class="py-12 border-t border-gray-100">
  <div class="max-w-5xl mx-auto px-4">
    <div class="flex flex-col md:flex-row gap-8 items-center">
      {/* Author Image */}
      {image && (
        <div class="w-full md:w-1/3">
          <div class="rounded-full overflow-hidden w-48 h-48 mx-auto">
            <Image
              src={image}
              alt={imageAlt || "Author headshot"}
              width={192}
              height={192}
              class="w-full h-full object-cover"
            />
          </div>
        </div>
      )}

      {/* Author Details */}
      <div class="w-full md:w-2/3 text-center md:text-left">
        {title && <h2 class="text-2xl font-semibold mb-4">{title}</h2>}
        
        {description && 
          <div class="prose prose-lg max-w-none prose-headings:text-primary prose-headings:font-semibold text-gray-500 prose-strong:font-semibold prose-strong:text-accent" set:html={description}></div>
        }
      </div>
    </div>
  </div>
</section>
