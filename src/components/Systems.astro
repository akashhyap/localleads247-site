---
import { Image } from "astro:assets";
import all_in_one from "../assets/images/all-in-one.jpg";
import semantic_seo from "../assets/images/semantic-seo.png";
import ppc_campaigns from "../assets/images/data-driven.png";
import web_design from "../assets/images/lead-focused.png";

interface MainService {
  title: string;
  description: string;
  imageSrc?: ImageMetadata;
  imageAlt?: string;
  link?: string;
}

interface Card {
  title: string;
  description: string;
  link: string;
  imageSrc?: ImageMetadata;
  imageAlt?: string;
}

interface Props {
  badgeText?: string;
  title?: string;
  highlightedText?: string;
  description?: string;
  mainService?: MainService;
  cards?: Card[];
}

const {
  badgeText = "Our Services",
  title = "An Integrated System for",
  highlightedText = "Market Dominance",
  description = "More than marketingâ€”we provide a complete operating system for growth.",
  mainService = {
    title: "<span class=\"text-accent\">All-in-One OS</span> for Lead & Job Management",
    description: "Manage leads, automate follow-ups, handle billing, and schedule jobs from a single, white-labeled platform.",
    link: "/services/business-os/",
    imageSrc: all_in_one,
    imageAlt: "All-in-One OS"
  },
  cards = [
    {
      title: "Semantic SEO to Build Topical Authority",
      description: "Our core service. We build a content network that makes you the undisputed expert for your services in Las Vegas.",
      link: "/services/semantic-seo/",
      imageSrc: semantic_seo,
      imageAlt: "Semantic SEO"
    },
    {
      title: "Data-Driven Google & Meta Ad Campaigns",
      description: "Our ad campaigns are informed by SEO data, targeting high-intent customers on Google & Meta with precision.",
      link: "/services/ppc-management/",
      imageSrc: ppc_campaigns,
      imageAlt: "PPC Campaigns"
    },
    {
      title: "Lead-Focused Headless & WordPress Websites",
      description: "Technically perfect websites using Headless or WordPress, designed for speed, user experience, and conversion.",
      link: "/services/web-design/",
      imageSrc: web_design,
      imageAlt: "Web Design"
    }
  ]
} = Astro.props;
---

<section class="py-16 xl:py-28">
  <div class="container px-4 xl:px-0">
    <!-- Title -->
    <div class="lg:max-w-2xl mx-auto text-center">
      <div class="mb-3">
        <span
          class="inline-flex items-center px-3 py-2 rounded-full bg-primary/10 text-sm text-gray-600"
        >
          {badgeText}
        </span>
      </div>
      <h2 class="text-3xl md:text-4xl lg:text-[2.45rem] font-semibold text-gray-900 mb-4">
        {title} <span class="text-primary/80">{highlightedText}</span>
      </h2>
      <p class="text-lg text-gray-600" set:html={description}>
      </p>
    </div>

    <!-- Intro -->

    <div
      class="max-w-6xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-8 py-16 xl:pb-16 xl:pt-24 items-center"
    >
      <div>
        <h3 class="text-2xl font-medium mt-5 mb-3 text-gray-900" set:html={mainService.title}>
        </h3>
        <p class="text-gray-600 flex-grow mb-5">
          {mainService.description}
        </p>
        <div class="">
          <a
            href={mainService.link}
            class="inline-flex items-center justify-center text-primary border border-primary px-6 py-2 rounded-full font-medium hover:text-accent hover:bg-primary"
          >
            Learn more
            <svg 
              xmlns="http://www.w3.org/2000/svg" 
              class="h-4 w-4 ml-1" 
              viewBox="0 0 20 20"
              fill="currentColor"
            >
              <path 
                fill-rule="evenodd" 
                d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" 
                clip-rule="evenodd" 
              />
            </svg>
          </a>
        </div>
      </div>
      <div class="flex items-center justify-center">
        <Image
          src={mainService.imageSrc || all_in_one}
          alt={mainService.imageAlt || "All-in-One OS"}
          class="w-full h-auto object-contain rounded-3xl"
          width={800}
          height={600}
        />
      </div>
    </div>

    <div
      class="max-w-7xl mx-auto grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 xl:gap-12 py-16"
    >
      {cards.map(card => (
        <div class="flex flex-col h-full">
          <div class="border border-gray-300 rounded-3xl p-4 overflow-hidden">
            <div class="flex items-center justify-center">
              <Image
                src={card.imageSrc || semantic_seo}
                alt={card.imageAlt || card.title}
                class="w-full h-full object-cover"
                width={1070}
                height={775}
              />
            </div>
          </div>
          <div class="system_content">
            <h3 class="text-xl font-medium mt-5 mb-3 text-gray-900 text-center">
              {card.title}
            </h3>
            <p class="text-gray-600 flex-grow mb-5 text-center">
              {card.description}
            </p>
            <div class="text-center">
              <a
                href={card.link}
                class="inline-flex items-center justify-center text-accent font-medium hover:text-primary"
              >
                Learn more
                <svg 
                  xmlns="http://www.w3.org/2000/svg" 
                  class="h-4 w-4 ml-1" 
                  viewBox="0 0 20 20"
                  fill="currentColor"
                >
                  <path 
                    fill-rule="evenodd" 
                    d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" 
                    clip-rule="evenodd" 
                  />
                </svg>
              </a>
            </div>
          </div>
        </div>
      ))}

    </div>
  </div>
</section>

<style>
  @media (min-width: 1198px) {
    .system_content {
      width: 82%;
      margin: auto;
    }
  }
</style>
