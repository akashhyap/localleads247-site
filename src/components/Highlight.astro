---
import { Image } from "astro:assets";
import marcImage from "../assets/images/marc.png";

interface Props {
  title?: string;
  highlightedText?: string;
  description?: string;
  buttonText?: string;
  buttonLink?: string;
  bulletPoints?: {title: string; description: string}[];
  image?: any; // Allow custom image to be passed
  imageAlt?: string;
  ctaTitle?: string;
}

const {
  title = "Stop Renting Traffic.",
  highlightedText = "Start Building an Asset.",
  description = "Typical agencies focus on short-term tactics that fade. We build a permanent digital asset for your business. Our Semantic Authority Model is designed to be resilient to algorithm updates because it aligns with Google's core mission: to reward comprehensive, authoritative sources.",
  buttonText = "More About Our Philosophy",
  buttonLink = "/contact",
  image = marcImage,
  imageAlt = "Local Leads 247 Representative",
  ctaTitle = "Start Growing Your Business Today",
  bulletPoints = [
    {
      title: "27+ Years of Digital Expertise:",
      description: "We've navigated every shift in the digital landscape."
    },
    {
      title: "Data-Driven & Transparent:",
      description: "We track ROI from first click to final invoice."
    },
    {
      title: "Focused on Home Services:",
      description: "We understand your customers and your challenges."
    }
  ]
} = Astro.props;
---

<section class="bg-gray-100 pt-16 xl:pt-24">
  <div class="container max-w-7xl px-4 xl:px-0 mx-auto">
    <div class="flex flex-col md:flex-row items-center gap-8 md:gap-12">
      <!-- Left Content Column -->
      <div class="md:w-5/12">
        <h2 class="text-3xl md:text-4xl lg:text-[2.45rem] font-semibold mb-6">
          {title} <span class="text-primary/80">{highlightedText}</span>
        </h2>

        <p class="text-gray-700 text-lg mb-8" set:html={description}>
        </p>
        <div class="mt-8">
          <a
            href={buttonLink}
            class="inline-block bg-primary hover:bg-transparent border border-primary text-white hover:text-primary font-medium py-3 px-8 rounded-full transition-colors duration-300"
          >
            {buttonText}
          </a>
        </div>
      </div>

      <!-- Right Column with Image and Points -->
      <div class="md:w-7/12 flex flex-col md:flex-row items-center gap-6">
        <div class="relative w-full md:w-1/2">
          <Image
            src={image}
            alt={imageAlt}
            width={400}
            height={500}
            class="rounded-lg"
          />
        </div>

        <div class="md:w-1/2">
          <h3 class="text-2xl font-semibold mb-4 text-gray-800">
            {ctaTitle}
          </h3>

          <ul class="space-y-4">
            {bulletPoints.map(point => (
              <li class="flex items-start gap-2">
                <span class="text-[#FF6B35] text-2xl leading-none">â€¢</span>
                <div class="text-gray-600">
                  <span class="text-accent">{point.title}</span>
                  {point.description}
                </div>
              </li>
            ))}
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>
