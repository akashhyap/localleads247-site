---
export interface Props {
  formId: string;
  formName?: string;
  height?: string;
}

const { formId, formName = "Quote Request Form", height = "686" } = Astro.props;
---

<div class="lead-form-container" style={`height: ${height}px;`}>
  <iframe
    src="https://link.localleads247.com/widget/form/3oDVE5VJdMfHeO84xVh0"
    style="width:100%;height:100%;border:none;border-radius:0px"
    id="inline-3oDVE5VJdMfHeO84xVh0"
    data-layout="{'id':'INLINE'}"
    data-trigger-type="alwaysShow"
    data-trigger-value=""
    data-activation-type="alwaysActivated"
    data-activation-value=""
    data-deactivation-type="neverDeactivate"
    data-deactivation-value=""
    data-form-name="Web form"
    data-height="686"
    data-layout-iframe-id="inline-3oDVE5VJdMfHeO84xVh0"
    data-form-id="3oDVE5VJdMfHeO84xVh0"
    title="Web form"
    loading="lazy"
    fetchpriority="low"
  >
  </iframe>
  <script src="https://link.localleads247.com/js/form_embed.js" defer></script>
</div>

<style define:vars={{ formHeight: height }}>
  .lead-form-container {
    width: 100%;
    height: calc(var(--formHeight) * 1px);
    margin: 0;
    padding: 0;
  }
</style>

<link rel="preconnect" href="https://link.localleads247.com" crossorigin>
<link rel="preload" href="https://link.localleads247.com/js/form_embed.js" as="script">
