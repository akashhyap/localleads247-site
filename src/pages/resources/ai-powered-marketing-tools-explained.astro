---
import Layout from "../../layouts/Layout.astro";
import ResourceHero from "../../components/ResourceHero.astro";
import ResourceContentWrapper from "../../components/ResourceContentWrapper.astro";
import ContentSection from "../../components/ContentSection.astro";
import AuthorBio from "../../components/AuthorBio.astro";
import aiBot from '../../assets/images/ai-bot.jpg';
import marcImage from '../../assets/images/marc.jpg';

// Import page content data from structured markdown frontmatter
import { frontmatter } from "../content/resources/ai-powered-marketing-tools-explained.md";

// Extract sections from frontmatter
const { 
  intro, 
  conversationBot, 
  leadNurturing,
  sentimentAnalysis,
  conclusion,
  authorBio
} = frontmatter;

// Define headings for table of contents - these match the section IDs in our content
const headings = [
  { id: "ai-isnt-the-future-its-the-present", text: "AI Isn't the Future, It's the Present", level: 2 },
  { id: "ai-tool-1-the-247-ai-conversation-bot", text: "AI Tool #1: The 24/7 AI Conversation Bot", level: 2 },
  { id: "ai-tool-2-automated-lead-nurturing-workflows", text: "AI Tool #2: Automated Lead Nurturing Workflows", level: 2 },
  { id: "ai-tool-3-sentiment-analysis-task-assignment", text: "AI Tool #3: Sentiment Analysis & Task Assignment", level: 2 },
  { id: "the-goal-more-time-more-profit", text: "The Goal: More Time, More Profit", level: 2 },
  { id: "about-the-author", text: "About the Author", level: 2 }
];
---

<Layout title={frontmatter.title}>
  <ResourceHero
    title={frontmatter.hero.title}
    description={frontmatter.hero.description}
    buttonText={frontmatter.hero.buttonText}
    buttonLink={frontmatter.hero.buttonLink}
    author={frontmatter.author}
    authorTitle={frontmatter.authorTitle}
    publishedDate={frontmatter.publishedDate}
    updatedDate={frontmatter.updatedDate}
  />

  <main>
    <ResourceContentWrapper 
      headings={headings}
      sectionTitle="AI-Powered Marketing Tools Explained"
      sectionDescription="Learn how AI is revolutionizing the marketing landscape and how you can leverage these powerful tools to grow your business."
    >
        {/* Introduction Section */}
        <ContentSection 
          sectionData={{
            title: intro.title,
            description: intro.description
          }}
          variant="default"
          id="ai-isnt-the-future-its-the-present"
        />
        
        {/* Conversation Bot Section */}
        <ContentSection 
          sectionData={{
            title: conversationBot.title,
            description: conversationBot.description,
            image: aiBot,
            imageAlt: conversationBot.imageAlt
          }}
          variant="default"
          id="ai-tool-1-the-247-ai-conversation-bot"
        />
        
        {/* Lead Nurturing Section */}
        <ContentSection 
          sectionData={{
            title: leadNurturing.title,
            description: leadNurturing.description,
            ...(leadNurturing.image && { 
              image: leadNurturing.image,
              imageAlt: leadNurturing.imageAlt 
            })
          }}
          variant="default"
          id="ai-tool-2-automated-lead-nurturing-workflows"
        />
        
        {/* Sentiment Analysis Section */}
        <ContentSection 
          sectionData={{
            title: sentimentAnalysis.title,
            description: sentimentAnalysis.description,
            ...(sentimentAnalysis.image && { 
              image: sentimentAnalysis.image,
              imageAlt: sentimentAnalysis.imageAlt 
            })
          }}
          variant="default"
          id="ai-tool-3-sentiment-analysis-task-assignment"
        />
        
        {/* Conclusion Section */}
        <ContentSection 
          sectionData={{
            title: conclusion.title,
            description: conclusion.description,
            buttonText: conclusion.buttonText,
            buttonLink: conclusion.buttonLink,
            ...(conclusion.image && { 
              image: conclusion.image,
              imageAlt: conclusion.imageAlt 
            })
          }}
          variant="default"
          id="the-goal-more-time-more-profit"
        />
        
        {/* Author Bio Section */}
        <AuthorBio
          authorData={{
            title: authorBio.title,
            description: authorBio.description,
            image: marcImage,
            imageAlt: authorBio.imageAlt
          }}
          id="about-the-author"
        />
    </ResourceContentWrapper>
  </main>
</Layout>