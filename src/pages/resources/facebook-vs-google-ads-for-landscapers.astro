---
import Layout from "../../layouts/Layout.astro";
import ResourceHero from "../../components/ResourceHero.astro";
import ResourceContentWrapper from "../../components/ResourceContentWrapper.astro";
import ContentSection from "../../components/ContentSection.astro";
import AuthorBio from "../../components/AuthorBio.astro";
import marcImage from '../../assets/images/marc.jpg';
import landscapeImage from '../../assets/images/fb-google.jpg'; // Placeholder image - replace with actual landscaping image if available

// Import page content data from structured markdown frontmatter
import { frontmatter } from "../content/resources/facebook-vs-google-ads-for-landscapers.md";

// Extract sections from frontmatter
const { 
  intro, 
  googleAds,
  facebookAds,
  strategy,
  verdict,
  authorBio
} = frontmatter;

// Define headings for table of contents - these match the section IDs in our content
const headings = [
  { id: "core-difference", text: "The Core Difference: Capturing Demand vs. Creating Demand", level: 2 },
  { id: "google-ads", text: "When to Use Google Ads for Your Landscaping Business", level: 2 },
  { id: "facebook-ads", text: "When to Use Facebook Ads for Your Landscaping Business", level: 2 },
  { id: "full-funnel-strategy", text: "The LocalLeads247 Strategy: A Full-Funnel Approach", level: 2 },
  { id: "verdict", text: "The Verdict: Which is Right for You?", level: 2 },
  { id: "about-the-author", text: "About the Author", level: 2 }
];
---

<Layout title={frontmatter.title}>
  <ResourceHero
    title={frontmatter.hero.title}
    description={frontmatter.hero.description}
    buttonText={frontmatter.hero.buttonText}
    buttonLink={frontmatter.hero.buttonLink}
    author={frontmatter.author}
    authorTitle={frontmatter.authorTitle}
    publishedDate={frontmatter.publishedDate}
    updatedDate={frontmatter.updatedDate}
  />

  <main>
    <ResourceContentWrapper 
      headings={headings}
      sectionTitle="Facebook Ads vs. Google Ads for Landscapers"
      sectionDescription="Learn which advertising platform is best for your landscaping business based on your specific goals, target audience, and budget."
    >
        {/* Introduction Section */}
        <ContentSection 
          sectionData={{
            title: intro.title,
            description: intro.description
          }}
          variant="default"
          id="core-difference"
        />
        
        {/* Google Ads Section */}
        <ContentSection 
          sectionData={{
            title: googleAds.title,
            description: googleAds.description
          }}
          variant="default"
          id="google-ads"
        />
        
        {/* Facebook Ads Section */}
        <ContentSection 
          sectionData={{
            title: facebookAds.title,
            description: facebookAds.description,
            image: landscapeImage,
            imageAlt: facebookAds.imageAlt
          }}
          variant="default"
          id="facebook-ads"
        />
        
        {/* Strategy Section */}
        <ContentSection 
          sectionData={{
            title: strategy.title,
            description: strategy.description
          }}
          variant="default"
          id="full-funnel-strategy"
        />
        
        {/* Verdict Section */}
        <ContentSection 
          sectionData={{
            title: verdict.title,
            description: verdict.description,
            buttonText: verdict.buttonText,
            buttonLink: verdict.buttonLink
          }}
          variant="default"
          id="verdict"
        />
        
        {/* Author Bio Section */}
        <AuthorBio
          authorData={{
            title: authorBio.title,
            description: authorBio.description,
            image: marcImage,
            imageAlt: authorBio.imageAlt
          }}
          id="about-the-author"
        />
    </ResourceContentWrapper>
  </main>
</Layout>
