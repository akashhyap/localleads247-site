---
import Layout from "../../layouts/Layout.astro";
import ResourceHero from "../../components/ResourceHero.astro";
import ResourceContentWrapper from "../../components/ResourceContentWrapper.astro";
import ContentSection from "../../components/ContentSection.astro";
import AuthorBio from "../../components/AuthorBio.astro";
import marcImage from '../../assets/images/marc.jpg';
import handymanImage from '../../assets/images/all-in-one.jpg'; // Placeholder image - replace with actual handyman marketing image if available

// Import page content data from structured markdown frontmatter
import { frontmatter } from "../content/resources/content-marketing-ideas-for-handyman-services.md";

// Extract sections from frontmatter
const { 
  intro, 
  beforeAfterPhotos,
  howToVideos,
  googleProfile,
  servicesPage,
  realEstatePartners,
  videoTestimonials,
  dayPackage,
  conclusion,
  authorBio
} = frontmatter;

// Define headings for table of contents - these match the section IDs in our content
const headings = [
  { id: "marketing-challenge", text: "The Handyman's Marketing Challenge", level: 2 },
  { id: "before-after-photos", text: "1. Showcase Your Work with Before-and-After Photos", level: 2 },
  { id: "how-to-videos", text: "2. Create Simple 'How-To' Videos for Common Repairs", level: 2 },
  { id: "google-profile", text: "3. Optimize Your Google Business Profile (GBP)", level: 2 },
  { id: "services-page", text: "4. Publish a 'Services We Offer' Page with Details", level: 2 },
  { id: "real-estate-partners", text: "5. Partner with Local Real Estate Agents", level: 2 },
  { id: "video-testimonials", text: "6. Collect and Showcase Video Testimonials", level: 2 },
  { id: "day-package", text: "7. Create 'Handyman for a Day' Package Offers", level: 2 },
  { id: "conclusion", text: "Putting It All Together with the Right System", level: 2 },
  { id: "about-the-author", text: "About the Author", level: 2 }
];
---

<Layout title={frontmatter.title}>
  <ResourceHero
    title={frontmatter.hero.title}
    description={frontmatter.hero.description}
    buttonText={frontmatter.hero.buttonText}
    buttonLink={frontmatter.hero.buttonLink}
    author={frontmatter.author}
    authorTitle={frontmatter.authorTitle}
    publishedDate={frontmatter.publishedDate}
    updatedDate={frontmatter.updatedDate}
  />

  <main>
    <ResourceContentWrapper 
      headings={headings}
      sectionTitle="Content Marketing Ideas for Handyman Services"
      sectionDescription="Learn how to attract more clients and grow your handyman business with these 7 proven content marketing strategies tailored specifically for handyman services."
    >
        {/* Introduction Section */}
        <ContentSection 
          sectionData={{
            title: intro.title,
            description: intro.description
          }}
          variant="default"
          id="marketing-challenge"
        />
        
        {/* Before-After Photos Section */}
        <ContentSection 
          sectionData={{
            title: beforeAfterPhotos.title,
            description: beforeAfterPhotos.description
          }}
          variant="default"
          id="before-after-photos"
        />
        
        {/* How-To Videos Section */}
        <ContentSection 
          sectionData={{
            title: howToVideos.title,
            description: howToVideos.description
          }}
          variant="default"
          id="how-to-videos"
        />
        
        {/* Google Profile Section */}
        <ContentSection 
          sectionData={{
            title: googleProfile.title,
            description: googleProfile.description,
            image: handymanImage,
            imageAlt: googleProfile.imageAlt
          }}
          variant="default"
          id="google-profile"
        />
        
        {/* Services Page Section */}
        <ContentSection 
          sectionData={{
            title: servicesPage.title,
            description: servicesPage.description
          }}
          variant="default"
          id="services-page"
        />
        
        {/* Real Estate Partners Section */}
        <ContentSection 
          sectionData={{
            title: realEstatePartners.title,
            description: realEstatePartners.description
          }}
          variant="default"
          id="real-estate-partners"
        />
        
        {/* Video Testimonials Section */}
        <ContentSection 
          sectionData={{
            title: videoTestimonials.title,
            description: videoTestimonials.description
          }}
          variant="default"
          id="video-testimonials"
        />
        
        {/* Day Package Section */}
        <ContentSection 
          sectionData={{
            title: dayPackage.title,
            description: dayPackage.description
          }}
          variant="default"
          id="day-package"
        />
        
        {/* Conclusion Section */}
        <ContentSection 
          sectionData={{
            title: conclusion.title,
            description: conclusion.description,
            buttonText: conclusion.buttonText,
            buttonLink: conclusion.buttonLink
          }}
          variant="default"
          id="conclusion"
        />
        
        {/* Author Bio Section */}
        <AuthorBio
          authorData={{
            title: authorBio.title,
            description: authorBio.description,
            image: marcImage,
            imageAlt: authorBio.imageAlt
          }}
          id="about-the-author"
        />
    </ResourceContentWrapper>
  </main>
</Layout>
