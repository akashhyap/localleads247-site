---
import Layout from "../../layouts/Layout.astro";
import ResourceHero from "../../components/ResourceHero.astro";
import ResourceContentWrapper from "../../components/ResourceContentWrapper.astro";
import ContentSection from "../../components/ContentSection.astro";
import AuthorBio from "../../components/AuthorBio.astro";
import marcImage from '../../assets/images/marc.jpg';
import seoVsPpcImage from '../../assets/images/marc-explaining.jpg'; // Placeholder image - replace with actual SEO vs PPC comparison image if available

// Import page content data from structured markdown frontmatter
import { frontmatter } from "../content/resources/seo-vs-ppc-for-electricians.md";

// Extract sections from frontmatter
const { 
  intro, 
  seo,
  ppc,
  hybridApproach,
  verdict,
  authorBio
} = frontmatter;

// Define headings for table of contents - these match the section IDs in our content
const headings = [
  { id: "core-dilemma", text: "The Core Dilemma: Immediate Calls vs. Long-Term Growth", level: 2 },
  { id: "what-is-seo", text: "What is SEO? The Long-Term Asset", level: 2 },
  { id: "what-is-ppc", text: "What is PPC? The Immediate Results Engine", level: 2 },
  { id: "hybrid-approach", text: "The LocalLeads247 Hybrid Approach: The Best of Both Worlds", level: 2 },
  { id: "the-verdict", text: "The Verdict: What's Right for Your Electrical Business?", level: 2 },
  { id: "about-the-author", text: "About the Author", level: 2 }
];
---

<Layout title={frontmatter.title}>
  <ResourceHero
    title={frontmatter.hero.title}
    description={frontmatter.hero.description}
    buttonText={frontmatter.hero.buttonText}
    buttonLink={frontmatter.hero.buttonLink}
    author={frontmatter.author}
    authorTitle={frontmatter.authorTitle}
    publishedDate={frontmatter.publishedDate}
    updatedDate={frontmatter.updatedDate}
  />

  <main>
    <ResourceContentWrapper 
      headings={headings}
      sectionTitle="SEO vs. PPC for Electricians"
      sectionDescription="Learn the pros and cons of Search Engine Optimization and Pay-Per-Click advertising to make the best investment decision for your electrical contracting business."
    >
        {/* Introduction Section */}
        <ContentSection 
          sectionData={{
            title: intro.title,
            description: intro.description
          }}
          variant="default"
          id="core-dilemma"
        />
        
        {/* SEO Section */}
        <ContentSection 
          sectionData={{
            title: seo.title,
            description: seo.description
          }}
          variant="default"
          id="what-is-seo"
        />
        
        {/* PPC Section */}
        <ContentSection 
          sectionData={{
            title: ppc.title,
            description: ppc.description,
            image: seoVsPpcImage,
            imageAlt: ppc.imageAlt
          }}
          variant="default"
          id="what-is-ppc"
        />
        
        {/* Hybrid Approach Section */}
        <ContentSection 
          sectionData={{
            title: hybridApproach.title,
            description: hybridApproach.description
          }}
          variant="default"
          id="hybrid-approach"
        />
        
        {/* Verdict Section */}
        <ContentSection 
          sectionData={{
            title: verdict.title,
            description: verdict.description,
            buttonText: verdict.buttonText,
            buttonLink: verdict.buttonLink
          }}
          variant="default"
          id="the-verdict"
        />
        
        {/* Author Bio Section */}
        <AuthorBio
          authorData={{
            title: authorBio.title,
            description: authorBio.description,
            image: marcImage,
            imageAlt: authorBio.imageAlt
          }}
          id="about-the-author"
        />
    </ResourceContentWrapper>
  </main>
</Layout>
