---
import { Image } from "astro:assets";
import Layout from "../../layouts/Layout.astro";
import InnerHero from "../../components/InnerHero.astro";
import Cta from "../../components/Cta.astro";
import Blockquote from "../../components/Blockquote.astro";
import Services from "../../components/Services.astro";
import ImageTextCol from "../../components/ImageTextCol.astro";

// Import images
import semanticSEO from "../../assets/images/semantic-seo.png";
import leadFocused from "../../assets/images/lead-focused.png";
import dataDriven from "../../assets/images/data-driven.png";
import allInOneOS from "../../assets/images/all-in-one.jpg";

// Import page content from MD file
import _, { frontmatter } from "../content/services/home.md";
---

<Layout title={frontmatter.title}>
  <!-- Inner Hero Component for header with dynamic content -->
  <InnerHero
    title={frontmatter.hero.title}
    description={frontmatter.hero.description}
    buttonText={frontmatter.hero.buttonText}
    buttonLink={frontmatter.hero.buttonLink}
  />

  <!-- Main Services Content -->
  <main class="services-page">
    <!-- The intro section content has been moved to the InnerHero component -->

    <ImageTextCol
      imageSrc={allInOneOS}
      imageAlt={frontmatter.imageTextCol.imageAlt}
      title={frontmatter.imageTextCol.title}
      highlightedText={frontmatter.imageTextCol.highlightedText}
      description={frontmatter.imageTextCol.description}
      accentText={frontmatter.imageTextCol.accentText}
      imagePosition={frontmatter.imageTextCol.imagePosition}
    />

    <!-- Four Pillars Section -->
    <Services
      badgeText={frontmatter.services.badgeText}
      title={frontmatter.services.title}
      highlightedText={frontmatter.services.highlightedText}
      description={frontmatter.services.description}
      services={frontmatter.services.services}
    />

    <!-- Quote -->

    <Blockquote
      title={frontmatter.blockquote.title}
      titleHighlight={frontmatter.blockquote.titleHighlight}
      quote={frontmatter.blockquote.quote}
      author={frontmatter.blockquote.author}
      company={frontmatter.blockquote.company}
    />

    <!-- CTA Section -->
    <Cta
      title={frontmatter.cta.title}
      highlightedText={frontmatter.cta.highlightedText}
      description={frontmatter.cta.description}
      buttonText={frontmatter.cta.buttonText}
      buttonLink={frontmatter.cta.buttonLink}
    />
  </main>
</Layout>

<style>
  .pillar-card {
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .pillar-card > div {
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .pillar-card a {
    margin-top: auto;
  }
</style>
