---
import { Image } from "astro:assets";
import Layout from "../../layouts/Layout.astro";
import InnerHero from "../../components/InnerHero.astro";
import Cta from "../../components/Cta.astro";
import ImageTextCol from "../../components/ImageTextCol.astro";
import Solutions from "../../components/Solutions.astro";
import Steps from "../../components/Steps.astro";
import ComparisonTable from "../../components/ComparisonTable.astro";

// Dev-controlled optimized image (keep using <Image />)
import seoImage from "../../assets/images/all-in-one.jpg";

// âœ… Import ONLY the named export 'frontmatter' from MD
import _, { frontmatter } from "../content/services/semantic-seo.md";
---
<Layout title={frontmatter.title}>
  <InnerHero
    title={frontmatter.hero.title}
    description={frontmatter.hero.description}
    buttonText={frontmatter.hero.buttonText}
    buttonLink={frontmatter.hero.buttonLink}
  />

  <main class="services-page">
    <ImageTextCol
      imageSrc={seoImage}
      imageAlt={frontmatter.imageTextCol.imageAlt}
      title={frontmatter.imageTextCol.title}
      highlightedText={frontmatter.imageTextCol.highlightedText}
      description={frontmatter.imageTextCol.description}
      accentText={frontmatter.imageTextCol.accentText}
      imagePosition={frontmatter.imageTextCol.imagePosition}
    />

    <Solutions
      badgeText={frontmatter.solutions.badgeText}
      title={frontmatter.solutions.title}
      highlightedText={frontmatter.solutions.highlightedText}
      description={frontmatter.solutions.description}
      solutions={frontmatter.solutions.solutions}
    />

    <Steps
      title={frontmatter.steps.title}
      highlightedText={frontmatter.steps.highlightedText}
      description={frontmatter.steps.description}
      image={seoImage}
      steps={frontmatter.steps.steps}
    />

    <ComparisonTable
      title={frontmatter.comparisonTable.title}
    />

    <Cta
      title={frontmatter.cta.title}
      highlightedText={frontmatter.cta.highlightedText}
      description={frontmatter.cta.description}
      buttonText={frontmatter.cta.buttonText}
      buttonLink={frontmatter.cta.buttonLink}
    />
  </main>
</Layout>

<style>
  .pillar-card { height: 100%; display: flex; flex-direction: column; }
  .pillar-card > div { height: 100%; display: flex; flex-direction: column; }
  .pillar-card a { margin-top: auto; }
</style>
