---
import { Image } from "astro:assets";
import Layout from "../../layouts/Layout.astro";
import InnerHero from "../../components/InnerHero.astro";
import Cta from "../../components/Cta.astro";
import Solutions from "../../components/Solutions.astro";
import Steps from "../../components/Steps.astro";
import FeatureHighlight from "../../components/FeatureHighlight.astro";

// Images for the intro section and feature highlight
import slowsite from "../../assets/images/slow-site.jpg";
import fastsite from "../../assets/images/fastsite.jpg";
import dashboard from "../../assets/images/dashboard-home.jpg";
import features from "../../assets/images/dashboard2.jpg";

// Load page content from MD frontmatter
import { frontmatter } from "../content/services/web-design.md";
---

<Layout title={frontmatter.title}>
  <InnerHero
    title={frontmatter.hero.title}
    description={frontmatter.hero.description}
    buttonText={frontmatter.hero.buttonText}
    buttonLink={frontmatter.hero.buttonLink}
  />

  <main class="services-page">
    <!-- Visual before/after section stays hard-coded (image assets), content above comes from MD -->
    <section class="py-16 xl:py-28">
      <div class="container max-w-5xl mx-auto px-4 xl:px-0">
        <div>
          <h2 class="text-4xl font-medium text-dark text-center">
            Is Your Website Actively 
            <span class="text-primary/80">Losing You Customers?</span>
          </h2>
          <p class="text-gray-500 mt-6 text-center">
            A slow, outdated, or confusing website doesn't just look badâ€”it drives away potential customers, hurts your <span class="text-accent">Google rankings, and wastes your ad spend.</span>
          </p>
        </div>
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 xl:gap-12 mt-8 xl:mt-16">
          <div>
            <Image
              src={slowsite}
              alt="Slow website performance example"
              width={800}
              height={800}
              class="rounded-3xl w-auto mx-auto h-full object-contain shadow-lg"
            />
          </div>
          <div>
            <Image
              src={fastsite}
              alt="Fast website performance example"
              width={800}
              height={800}
              class="rounded-3xl w-auto mx-auto h-full object-contain shadow-lg"
            />
          </div>
        </div>
      </div>
    </section>

    <Solutions
      badgeText={frontmatter.solutions.badgeText}
      title={frontmatter.solutions.title}
      highlightedText={frontmatter.solutions.highlightedText}
      description={frontmatter.solutions.description}
      solutions={frontmatter.solutions.solutions}
    />

    <Steps
      title={frontmatter.steps.title}
      highlightedText={frontmatter.steps.highlightedText}
      description={frontmatter.steps.description}
      image={features}
      steps={frontmatter.steps.steps}
    />

    <FeatureHighlight
      title={frontmatter.featureHighlight.title}
      titleHighlight={frontmatter.featureHighlight.titleHighlight}
      description={frontmatter.featureHighlight.description}
      link={frontmatter.featureHighlight.link}
      image={dashboard}
    />

    <Cta
      title={frontmatter.cta.title}
      highlightedText={frontmatter.cta.highlightedText}
      description={frontmatter.cta.description}
      buttonText={frontmatter.cta.buttonText}
      buttonLink={frontmatter.cta.buttonLink}
    />
  </main>
</Layout>

<style>
  .pillar-card { height: 100%; display: flex; flex-direction: column; }
  .pillar-card > div { height: 100%; display: flex; flex-direction: column; }
  .pillar-card a { margin-top: auto; }
</style>
